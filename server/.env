# Database Configuration
DATABASE=lizaso_db           # Name of the database
DATABASE_HOST=localhost      # Host where the database server is running
DATABASE_USER=root           # Username for accessing the database
DATABASE_PASSWORD=           # Password for the database user

# Server Configuration
PORT=3002                    # Port for the server to listen on

# Environment Configuration
NODE_ENV=development          # Set to 'production' when deploying

# JWT Configuration
ACCESS_TOKEN_SECRET=your_access_token_secret       # Secret for signing access tokens
REFRESH_TOKEN_SECRET=your_refresh_token_secret       # Secret for signing refresh tokens
JWT_EXPIRES_IN=900                              # Expiration time for access tokens (in seconds)
JWT_REFRESH_EXPIRES_IN=604800                   # Expiration time for refresh tokens (in seconds)

# Production Settings (Comment out in development)
# Uncomment these lines and set values for production
# DATABASE_HOST=your-production-database-host     # Production database host
# PORT=your-production-port                         # Production port (if different)
# NODE_ENV=production                               # Set to 'production' for live environment
# ACCESS_TOKEN_SECRET=your_production_access_secret
# REFRESH_TOKEN_SECRET=your_production_refresh_secret
